# Database
DATABASE_URL="postgresql://user:password@localhost:5432/renoa_ai"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# SendGrid (Email)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@renoa.ai"


# Amazon SES Configuration
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_access_key_here
AWS_SES_SECRET_ACCESS_KEY=your_secret_key_here
SES_FROM_EMAIL=outreach@yourdomain.com
SES_FROM_NAME="Renoa"
SES_CONFIGURATION_SET=email-tracking-config-set
SES_REPLY_TO_EMAIL=replies@yourdomain.com

# IMAP Configuration (for receiving replies)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password
IMAP_TLS=true
IMAP_POLL_INTERVAL_MS=60000

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
TRACKING_DOMAIN=yourdomain.com

# Webhook Security
WEBHOOK_SECRET=generate_a_random_secret_here

